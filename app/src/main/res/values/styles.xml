<resources>

    <!-- Base application theme. -->
    <style name="BloodGlucoseAppTheme" parent="Theme.AppCompat">
        <item name="android:textColor">@color/colorText</item>
        <item name ="android:actionBarStyle">@style/BloodGlucoseActionBarStyle</item>
    </style>

    <style name="BloodGlucoseActionBarStyle" parent="BloodGlucoseAppTheme">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="android:titleTextStyle">@style/BloodGlucoseActionbarTextStyle</item>
        <item name="android:textColorPrimary">@color/colorSurface</item>
    </style>

    <style name="BloodGlucoseActionbarTextStyle" parent="BloodGlucoseActionBarStyle">
        <item name="android:textColorPrimary">@color/colorSurface</item>

    </style>

    <style name="MyAlertDialogStyle">
        <!-- Used for the buttons -->
        <item name="colorAccent">#FFC107</item>
        <!-- Used for the title and text -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <!-- Used for the background -->
        <item name="android:background">#b1dbe9</item>
    </style>

</resources>