<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/textColorLinkInverse"
    android:minHeight="0dp"
    android:padding="1dp">

    <android.support.v7.widget.CardView
        android:id="@+id/bloodGlucoseMeasurementItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="2dp"


        app:cardElevation="0dp"
>

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:color/white">

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView2"


                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    app:srcCompat="@drawable/ic_baseline_access_time_24px" />

                <TextView
                    android:id="@+id/bloodGlucoseMeasurementdateLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:paddingStart="5dp"
                    android:textAllCaps="true"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/bloodGlucoseMeasurementEditButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:clickable="true"

                    app:srcCompat="@drawable/ic_baseline_edit_24px" />

                <ImageView
                    android:id="@+id/bloodGlucoseMeasurementDeleteButton"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    android:clickable="true"
                    app:srcCompat="@drawable/ic_baseline_delete_24px" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView3"


                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_baseline_bar_chart_24px" />

                <TextView
                    android:id="@+id/bloodGlucoseMeasurementAmountLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textAllCaps="true"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bloodGlucoseMeasurementAmountUnitsLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="5dp"
                    android:text="mmol/L"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp" />

                <ImageView
                    android:id="@+id/bloodMeasurementWarning"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_alert" />

            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_baseline_colorize_24px" />

                <TextView
                    android:id="@+id/bloodGlucoseMeasurementCorrectiveDoseAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="5dp"
                    android:text="units"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bloodGlucoseMeasurementCorrectiveDoseDrugName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="5dp"
                    android:text="Humalog"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/cardview_dark_background"
                    app:srcCompat="@drawable/ic_flask_outline" />

                <TextView
                    android:id="@+id/bloodGlucoseMeasurementBaselineDoseAmount"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp" />

                <TextView

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="5dp"
                    android:text="units"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/bloodGlucoseMeasurementBaselineDoseDrugName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:paddingStart="5dp"
                    android:text="Lantus"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp" />
            </TableRow>

            <TableRow
                android:id="@+id/_notesRow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="invisible">

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/ic_baseline_description_24px" />

                <TextView
                    android:id="@+id/bloodGlucoseMeasurementNotes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:paddingStart="5dp"
                    android:text="TextView"
                    android:textColor="@color/cardview_dark_background"
                    android:textSize="18sp" />
            </TableRow>

        </TableLayout>

    </android.support.v7.widget.CardView>

</android.support.constraint.ConstraintLayout>