<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bloodGlucoseMeasurementItem"

    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:layout_margin="4dp"


    android:elevation="6dp"
    android:padding="5dp"

    app:cardBackgroundColor="@android:color/holo_orange_dark"
    app:cardCornerRadius="7dp"
    app:cardElevation="6dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="?android:attr/colorPressedHighlight"
            android:backgroundTint="?android:attr/colorPressedHighlight">

            <ImageView
                android:id="@+id/timeImageView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_food_fork_drink" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/bloodGlucoseMeasurementEditButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:clickable="true"

                android:src="@drawable/ic_baseline_edit_24px" />

            <ImageView
                android:id="@+id/bloodGlucoseMeasurementDeleteButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:clickable="true"
                android:src="@drawable/ic_baseline_delete_24px" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView2"


                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_access_time_24px" />

            <TextView
                android:id="@+id/bloodGlucoseMeasurementdateLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingStart="5dp"
                android:textAllCaps="true"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView3"


                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_bar_chart_24px" />

            <TextView
                android:id="@+id/bloodGlucoseMeasurementAmountLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textAllCaps="true"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bloodGlucoseMeasurementAmountUnitsLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:text="mmol/L"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/bloodMeasurementWarning"
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1"
                android:src="@drawable/ic_baseline_priority_high_24px" />

        </TableRow>

        <TableRow
            android:id="@+id/_correctiveAmountRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_colorize_24px" />

            <TextView
                android:id="@+id/bloodGlucoseMeasurementCorrectiveDoseAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:text="units"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bloodGlucoseMeasurementCorrectiveDoseDrugName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:text="Humalog"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/_baselineAmountRow"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_flask_outline"
                android:textColor="@color/cardview_dark_background" />

            <TextView
                android:id="@+id/bloodGlucoseMeasurementBaselineDoseAmount"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp" />

            <TextView

                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:text="units"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/bloodGlucoseMeasurementBaselineDoseDrugName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:paddingStart="5dp"
                android:text="Lantus"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp" />
        </TableRow>

        <TableRow
            android:id="@+id/_notesRow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/ic_baseline_description_24px" />

            <TextView
                android:id="@+id/bloodGlucoseMeasurementNotes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:paddingStart="5dp"
                android:text="TextView"
                android:textColor="@color/cardview_dark_background"
                android:textSize="18sp" />
        </TableRow>

    </TableLayout>

</android.support.v7.widget.CardView>

